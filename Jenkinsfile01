pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Clones the repository to the workspace
                    git url: 'https://github.com/your-username/your-repo.git'
                }
            }
        }
        stage('Access File') {
            steps {
                script {
                    // Read the content of the file
                    def fileContent = readFile 'path_to_your_file_in_repo/file_name.txt'
                    // Print the content
                    echo fileContent
                }
            }
        }
    }
}
